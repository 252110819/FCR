<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wrap_wh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="txt_s_blackx" parent="@style/wrap_wh">
        <item name="android:textSize">@dimen/size_12sp</item>
        <item name="android:textColor">@color/black_lightx</item>
    </style>

    <style name="txt_l_blackx" parent="@style/txt_s_blackx">
        <item name="android:textSize">@dimen/size_18sp</item>
    </style>
</resources>
